@model Category
@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="p-3">
        <form method="post" asp-action="Delete" asp-controller="Category">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="mt-3">
                <h4 class="text-danger">Are you sure, You want to delete this Category?</h4>
            </div>
            <div class="mt-3">
                <label class="form-label" asp-for="@Model.Name"></label>
                <input class="form-control" disabled asp-for="@Model.Name" />
                <span class="text-danger" asp-validation-for="@Model.Name"></span>
            </div>
            <div class="mt-3">
                <label class="form-label" asp-for="@Model.DisplayOrder"></label>
                <input class="form-control" disabled asp-for="@Model.DisplayOrder" />
                <span class="text-danger" asp-validation-for="@Model.DisplayOrder"></span>
            </div>
            <div>
                <button type="submit" class="btn btn-danger mt-3 me-2">Delete</button>
                <a asp-action="Index" asp-controller="Category" ><button type="button" class="btn btn-secondary mt-3">Go Back</button></a>
            </div>
        </form>
    </div>
</div>